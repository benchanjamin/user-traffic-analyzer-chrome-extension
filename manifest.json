{
  "name": "User Traffic Analyzer",
  "version": "0.1.0",
  "description": "Created by Ben Chan and Andrew DeNeve",
  "permissions": [
    "storage",
    "tabs",
    "webRequest"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "contentScript.js"
      ]
    }
  ],
  "action": {
    "default_icon": {
      "16": "assets/images/traffic-cone.png",
      "24": "assets/images/traffic-cone.png",
      "32": "assets/images/traffic-cone.png"
    },
    "default_title": "See my traffic history",
    "default_popup": "popup.html"
  },
  "manifest_version": 3
}
